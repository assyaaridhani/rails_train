<%= form_tag sessions_path do %>
<div col md-5>
    <%= label_tag :username %>
    <div>
        <%= text_field_tag :username, (params[:username] unless params[:username].blank?) %>
    </div>
</div>

<br/>

<div col md-5>
    <%= label_tag :password %>
    <div>
        <%= password_field_tag :password %>
    </div>
</div>

<br/>

<%= submit_tag :submit %>
<% end %>